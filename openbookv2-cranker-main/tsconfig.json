{
  "compilerOptions": {
    "target": "esnext",                     
    "module": "commonjs",                   
    "moduleResolution": "node",            
    "strict": true,                        
    "esModuleInterop": true,               
    "resolveJsonModule": true,          
    "skipLibCheck": true,                  
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",                       
    "rootDir": "src",                       
    "sourceMap": false
  },
  "include": [
    "src/**/*.ts"                          
  ],
  "exclude": [
    "node_modules",                        
    "dist"                                 
  ]
}
